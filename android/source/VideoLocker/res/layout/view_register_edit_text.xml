<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <org.edx.mobile.view.custom.EEditText
        android:id="@+id/txt_input"
        style="@style/edit_text_style"
        android:textColorHint="@color/hint_grey_text" />

    <org.edx.mobile.view.custom.ETextView
        android:id="@+id/txt_input_error"
        style="@style/registration_error_message"
        android:visibility="gone"/>

    <org.edx.mobile.view.custom.ETextView
        android:id="@+id/txt_input_instruction"
        style="@style/registration_instruction_message"
        android:visibility="gone"/>

</LinearLayout>
