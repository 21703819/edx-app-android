<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            tools:text="Title"
            android:textColor="@color/edx_utility_success"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="10dp"
            tools:text="response body..."
            android:textColor="@color/edx_grayscale_neutral_dark"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvTimeAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvResponse"
            android:layout_marginTop="10dp"
            android:textColor="@color/edx_grayscale_neutral_base"
            android:textSize="16sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/etNewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvTimeAuthor"
            android:layout_marginTop="10dp"
            android:hint="@string/discussion_add_response_button" />

        <Button
            android:id="@+id/btnAddComment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/etNewComment"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/create_button_radius"
            android:text="@string/discussion_add_response_hint"
            android:textColor="@color/edx_white" />
    </RelativeLayout>
</ScrollView>