<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/discussion_responses_thread_row">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <org.edx.mobile.view.custom.ETextView
            android:id="@+id/discussion_author_layout_author_text_view"
            style="@style/discussion_responses_small_text"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="@dimen/discussion_responses_thread_text_view_spacing"
            android:layout_marginRight="@dimen/discussion_responses_thread_text_view_spacing"
            android:text="Brian Z"/>

        <org.edx.mobile.view.custom.ETextView
            android:id="@+id/discussion_author_layout_created_at_text_view"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/discussion_author_layout_author_text_view"
            android:layout_toRightOf="@+id/discussion_author_layout_author_text_view"
            android:layout_marginEnd="@dimen/discussion_responses_thread_text_view_spacing"
            android:layout_marginRight="@dimen/discussion_responses_thread_text_view_spacing"
            style="@style/discussion_responses_small_text"
            android:text="2 months ago"/>

        <org.edx.mobile.view.custom.ETextView
            android:id="@+id/discussion_author_layout_privileged_author_text_view"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/discussion_author_layout_created_at_text_view"
            android:layout_toRightOf="@+id/discussion_author_layout_created_at_text_view"
            style="@style/discussion_responses_small_text"
            android:text="Staff"/>

    </RelativeLayout>

</merge>