<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/discussion_responses_thread_row">

    <org.edx.mobile.view.custom.ETextView
        android:id="@+id/number_responses_or_comments_label"
        style="@style/discussion_responses_small_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <org.edx.mobile.view.custom.ETextView
        android:id="@+id/number_responses_or_comments_count_text_view"
        style="@style/discussion_responses_small_text"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/number_responses_or_comments_label"
        android:layout_toLeftOf="@+id/number_responses_or_comments_label"
        android:layout_marginEnd="@dimen/discussion_responses_thread_row_text_view_spacing"
        android:layout_marginRight="@dimen/discussion_responses_thread_row_text_view_spacing" />

    <org.edx.mobile.third_party.iconify.IconView
        android:id="@+id/number_responses_or_comments_icon_view"
        android:layout_width="@dimen/edx_xxx_small"
        android:layout_height="@dimen/edx_xxx_small"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/number_responses_or_comments_count_text_view"
        android:layout_toLeftOf="@+id/number_responses_or_comments_count_text_view"
        android:layout_marginEnd="@dimen/discussion_responses_thread_row_text_view_spacing"
        android:layout_marginRight="@dimen/discussion_responses_thread_row_text_view_spacing"
        app:iconColor="@color/edx_grayscale_neutral_base" />
</merge>